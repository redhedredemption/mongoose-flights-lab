<!DOCTYPE html>
<html>

<head>
    <title>MONGOOSE FLIGHT LIST</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />

    <nav>
        <ul class="navbar">
            <a href="/">HOME</a>
            <a href="/flights/new">NEW FLIGHT</a>
        </ul>
    </nav>
    <section id="header">
        <h1></h1>
    </section>
</head>

<body>
    <table>
        <thead>
            <h2 class="flightListTitle">FLIGHT LIST</h2>
            <tr>
                <th>Airline</th>
                <th>Airport</th>
                <th>Flight Number</th>
                <th>Departure Date</th>
            </tr>
        </thead>
        <tbody>
            <!-- Write the line of EJS to iterate over movies using forEach -->
            <% flightDocs.forEach(f=> { %>


                <tr>
                    <td>
                        <%= f.airline %>
                    </td>
                    <td>
                        <%= f.airport %>
                    </td>
                    <td>
                        <%= f.flightNo %>
                    </td>

                    <td>
                        <%= f.departs %>
                    </td>
                    <td><a href="/flights/<%= f._id %>">DETAILS</a></td>
                </tr>
                <!-- Close the forEach using EJS here -->
                <% }) %>
        </tbody>
    </table>
</body>

</html>