<!DOCTYPE html>
<html lang="en">
<link rel="stylesheet" href="/stylesheets/style.css" />

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <nav>
        <ul class="navbar">
            <a href="/">HOME PAGE</a>
            <a href="/flights/">ALL FLIGHTS</a>
        </ul>
    </nav>
    <section id="header">
        <h1>MONGOOSE FLIGHTS</h1>
    </section>
    <title>NEW FLIGHTS</title>
</head>

<body>
    <main>
        <section id="show-page">
            <div>Airline: </div>
            <div>
                <%= flight.airline %>
            </div>
            <div>Airport: </div>
            <div>
                <%= flight.airport %>
            </div>
            <div>Flight Number: </div>
            <div>
                <%= flight.flightNo %>
            </div>
            <div>Departs: </div>
            <div>
                <%= flight.departs %>
            </div>
            <div>Arrives: </div>
            <div>
                <%= flight.destinations[0].airport %>
                    <%= flight.destinations[0].arrival %>
            </div>
        </section>

        <br><br>
        <section id="destinations">
            <h2>DESTINATIONS</h2>
            <form id="add-review-form" method="POST" action="/flights/<%= flight._id %>/departs">


                <select name="airport">
                    <option value="AUS">AUS</option>
                    <option value="DFW">DFW</option>
                    <option value="DEN">DEN</option>
                    <option value="LAX">LAX</option>
                    <option value="SAN" selected>SAN</option>
                </select>
                <label>ARRIVAL DATE
                    <input type="date" name="Time">
                    <input type="submit" value="Add Arrival">
                </label>
            </form>
        </section>

        <% if (flight.destinations && flight.destinations.length) { %>
            <table>
                <thead>
                    <tr>
                        <th>Airport</th>
                        <th>Arrival</th>
                    </tr>
                </thead>
                <tbody>
                    <% flight.destinations.forEach(function(destination) { %>
                        <tr>
                            <td>
                                <%= destination.airport %>
                            </td>
                            <td>
                                <%= destination.arrival ? new Date(destination.arrival).toLocaleString() : "" %>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
            <% } else { %>
                <h5>No Destinations Yet</h5>
                <% } %>
    </main>
</body>

</html>